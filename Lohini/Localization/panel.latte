<script>
var Lohini= Lohini || {};

Lohini.translator={};

Lohini.translator.forms=function(pluralForm) {
	var pos=pluralForm.indexOf('=')+1;
	return pluralForm.substr(pos, pluralForm.indexOf(';')-pos);
	};

Lohini.translator.data=eval(<?php echo \Nette\Utils\Json::encode($dictionaries) ?>);
Lohini.translator.lang="<?php echo $lang ?>";

Lohini.translator.renderDictionaryList=function(dictionaries) {
	var $list=$('#lohini-translator-panel-content-dictionaries-list');
	$list.html($('<option>').attr('value', 0).text('Select dictionary'));
	for (var i in dictionaries) {
		var $dictionary=$('<option>').attr('value', i).text(dictionaries[i]['name']);
		$dictionary.click(function() {
			var $this=$(this);
			Lohini.translator.loadDictionary($this.attr('value'));
			});
		$list.append($dictionary);
		}
	};

Lohini.translator.renderPluralForm=function(pluralForm) {
	var $input=$('#lohini-translator-panel-content-dictionaries-pluralform');
	$input.val(pluralForm).attr('disabled', false);
	};

Lohini.translator.renderTranslationsList=function(translations) {
	var $list=$('#lohini-translator-panel-content-dictionary-translations');
	$list.html(null);
	for (var i in translations) {
		var $translation=$('<span>').text(i);
		if (translations[i]['status']==true) {
			$translation.addClass('saved');
			}
		else if (translations[i]['status']==false) {
			$translation.addClass('unsaved');
			}
		else {
			$translation.addClass('untranslated');
			}

		$translation.click(function() {
			var dictionary=Lohini.translator.getActiveDictionary();
			if (!Lohini.translator.data[dictionary]['pluralForm']) {
				Lohini.translator.data[dictionary]['pluralForm']=$('#lohini-translator-panel-content-dictionaries-pluralform').val();
				if (!Lohini.translator.data[dictionary]['pluralForm'] || !Lohini.translator.data[dictionary]['pluralForm'].indexOf('nplurals')) {
					alert('Please first set valid plural forms');
					$('#lohini-translator-panel-content-dictionaries-pluralform')[0].focus();
					return false;
					}
				}
			var forms=Lohini.translator.forms(Lohini.translator.data[dictionary]['pluralForm']);
			Lohini.translator.renderEditor($(this).text(), forms, translations[$(this).text()]['translation']);
			});

		$list.append($translation);
		}
	};

Lohini.translator.renderEditor=function(message, forms, translations) {
	var $editor=$('#lohini-translator-panel-content-editor');
	$editor.html(null);
	for (var i=0; i<forms; i++) {
		var text='';
		if (translations[i]) {
			text=translations[i];
			}
		$editor.append($('<textarea>').text(text).attr('data-lohini-translator-message', message).attr('data-lohini-translator-form', i).change(function() {
			var activeDictionary=Lohini.translator.getActiveDictionary();
			if (activeDictionary) {
				var $this=$(this);
				Lohini.translator.data[activeDictionary]['translations'][$this.attr('data-lohini-translator-message')]['translation'][$this.attr('data-lohini-translator-form')]=$this.val();
				Lohini.translator.data[activeDictionary]['translations'][$this.attr('data-lohini-translator-message')]['status']=false;
				Lohini.translator.renderTranslationsList(Lohini.translator.data[activeDictionary]['translations']);
				}
			}));
		}
	};

Lohini.translator.loadDictionary=function(dictionary) {
	if (!Lohini.translator.data[dictionary]['pluralForm']) {
		Lohini.translator.data[dictionary]['pluralForm']=$('#lohini-translator-panel-content-dictionaries-pluralform').val();
		}
	var data=Lohini.translator.data[dictionary];
	Lohini.translator.renderPluralForm(data['pluralForm']);
	Lohini.translator.renderTranslationsList(data['translations'])
	};

Lohini.translator.getActiveDictionary=function() {
	return $('#lohini-translator-panel-content-dictionaries-list').val();
	};

Lohini.translator.renderProcessing=function() {
	$('#lohini-translator-panel-content-editor').html(
		$('<p id="lohini-translator-panel-content-forms-notset">Please select dictionary</p>')
		);

	$('#lohini-translator-panel-content-dictionary-translations').html(
		$('<p id="lohini-translator-panel-forms-translations-empty">Empty</p>')
		);
	$('#lohini-translator-panel-content-dictionaries-list').val(0);
	};

if (!!window.jQuery) {
$(document).ready(function() {
	$('#lohini-translator-panel-content-forms-notset').html('Data not loaded');
	//Lohini.translator.renderPluralForm();
	$('#lohini-translator-panel-content-dictionaries-list').change(function() {
		var $this=$(this);
		if ($this.val()!=0) {
			Lohini.translator.loadDictionary($this.val());
			}
		});

	$('#lohini-translator-panel-content-dictionaries-pluralform').change(function() {
		var activeDictionary=Lohini.translator.getActiveDictionary();
		if (activeDictionary) {
			Lohini.translator.data[activeDictionary]['pluralForm']=$(this).val();
			}
		});

	Lohini.translator.renderDictionaryList(Lohini.translator.data);
	$('#lohini-translator-panel-content-inner').show();
	$('#lohini-translator-panel-content-editor').html(
		$('<p id="lohini-translator-panel-content-forms-notset">Please select dictionary</p>')
		);
	$('#lohini-translator-panel-notloaded').hide();

	$('#lohini-translator-panel-content-actions-reload').click(function() {
		Lohini.translator.renderProcessing();
		jQuery.ajax({
			type: 'POST',
			url: window.location.href,
			data: { action: 'get', lang: Lohini.translator.lang},
			beforeSend: function(jqXHR) {
				jqXHR.setRequestHeader('<?php echo self::XHR_HEADER ?>', 'true');
				},
			success: function(data) {
				Lohini.translator.data=data.data;
				}
			});
		return false;
		});

	$('#lohini-translator-panel-content-actions-extract').click(function() {
		Lohini.translator.renderProcessing();
		jQuery.ajax({
			type: 'POST',
			url: window.location.href,
			data: { action: 'extract', lang: Lohini.translator.lang},
			beforeSend: function(jqXHR) {
				jqXHR.setRequestHeader('<?php echo self::XHR_HEADER ?>', 'true');
				},
			success: function(data) {
				Lohini.translator.data=data.data;
				}
			});
		return false;
		});

	$('#lohini-translator-panel-content-actions-save').click(function() {
		Lohini.translator.renderProcessing();
		jQuery.ajax({
			type: 'POST',
			url: window.location.href,
			data: { action: 'save', lang: Lohini.translator.lang, data: Lohini.translator.data},
			beforeSend: function(jqXHR) {
				jqXHR.setRequestHeader('<?php echo self::XHR_HEADER ?>', 'true');
				},
			success: function(data) {
				Lohini.translator.data=data.data;
				}
			});
		return false;
		});
	});
}
</script>